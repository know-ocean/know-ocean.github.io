:root {
    --deep-teal: #11404d;
    --light-teal: #afccc0;
    --coral: #f87d62;
    --vivid-coral: #f36f50;
    --soft-teal: #6cb4b8;
    --rust: #aa4d3a;
    --ivory: #f7f1db;
    --medium-teal: #44a4af;
}

body {
    background-color: var(--ivory);
    color: var(--deep-teal);
}

header {
    background-color: var(--medium-teal);
    color: var(--ivory);
}

button {
    background-color: var(--coral);
    color: var(--ivory);
}

button:hover {
    background-color: var(--vivid-coral);
}

section {
    background-color: var(--light-teal);
}

footer {
    background-color: var(--rust);
    color: var(--ivory);
}
